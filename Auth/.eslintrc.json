{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "plugin:import/typescript"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": ["warn", 4],
        "import/extensions": ["never", "never"],
        "operator-linebreak": ["error", "after"]
    },
    "settings": {
        "import/extensions": [
            ".ts", ".js" 
        ]
    }
}
